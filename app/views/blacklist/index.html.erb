<div class="col-md-offset-4 col-md-4 page-title">
  <h2>Blacklist</h2>
</div>
<div class="pairing-wrapper col-md-6 col-md-offset-3">
  <ul class='blacklisted col-md-6 list-group'>
    <% @current_student.enemies.each do |enemy| %>
      <li class="list-group-item">
        <%= enemy.name %>
      </li>
    <% end %>
  </ul>
  <ul class="potential-partners col-md-6 list-group">
    <% @potential_partners.each do |potential_partner| %>
      <li class="list-group-item">
        <%= link_to potential_partner.name, student_blacklist_index_path(enemy: potential_partner), method: :post %>
      </li>
    <% end %>
  </ul>
</div>